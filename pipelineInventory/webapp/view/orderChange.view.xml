<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" controllerName="pipelineInventory.controller.orderChange" xmlns:tnt="sap.tnt" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="false">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<!--<Select change="selectedScreen" selectedKey="Order Change">-->
							<!--	<items>-->
							<!--		<core:Item key="Master" text="Master"/>-->
							<!--		<core:Item key="Details" text="Details"/>-->
							<!--		<core:Item key="Vehicle Details" text="Vehicle Details"/>-->
							<!--		<core:Item key="Order Change" text="Order Change"/>-->
							<!--		<core:Item key="Ship To Dealer" text="Ship To Dealer"/>-->
							<!--		<core:Item key="Ship To Dealer Response" text="Ship To Dealer Response"/>-->
							<!--		<core:Item key="Assign Vehicles" text="Assign Vehicles"/>-->
							<!--		<core:Item key="Assign Vehicles Status" text="Assign Vehicles Status"/>-->
							<!--		<core:Item key="Change History" text="Change History"/>-->
							<!--	</items>-->
							<!--</Select>-->
							<Button text="{i18n>Logout}"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader>
					<Select change="selectedScreen" selectedKey="Order Change">
						<items>
							<core:Item key="Master" text="Master"/>
							<core:Item key="Details" text="Details"/>
							<core:Item key="Vehicle Details" text="Vehicle Details"/>
							<core:Item key="Order Change" text="Order Change"/>
							<core:Item key="Ship To Dealer" text="Ship To Dealer"/>
							<core:Item key="Ship To Dealer Response" text="Ship To Dealer Response"/>
							<core:Item key="Assign Vehicles" text="Assign Vehicles"/>
							<core:Item key="Assign Vehicles Status" text="Assign Vehicles Status"/>
							<core:Item key="Change History" text="Change History"/>
						</items>
					</Select>
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>VehicleDetails}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ChangeHistory}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm class="formDetails" editable="true" layout="ResponsiveGridLayout" labelSpanM="12" adjustLabelSpan="false"
							emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
							<f:content>
								<core:Title text="{i18n>CurrentVehicleConfig}"/>
								<Label text="{i18n>ModelYear}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/DateOfSale}"/>
								<Label text="{i18n>Series}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Category}"/>
								<Label text="{i18n>Model}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Category}"/>
								<Label text="{i18n>Suffix}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Name}"/>
								<Label text="{i18n>APX}"/>
								<Input value="{DummyJSONModel>/selectedVehicleData/0/Quantity}"/>
								<Label text="{i18n>Colour}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Quantity}"/>
								<Label text="{i18n>OrderType}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Category}"/>
								<Label text="{i18n>Status}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Status}"/>
								<Label text="{i18n>VTN}"/>
								<Label text="{i18n>ETAFrom}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/DateOfSale}"/>
								<Label text="{i18n>ETATo}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/DateOfSale}"/>
								
								<core:Title text="{i18n>NewVehicleConfig}"/>
								<Label text="{i18n>ModelYear}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/DateOfSale}"/>
								<Label text="{i18n>Series}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Quantity}"/>
								<Label text="{i18n>NewModel}" required="true"/>
								<Input type="Text" value=""/>
								<Label text="{i18n>NewSuffix}" required="true"/>
								<Input type="Text" value=""/>
								<Label text="{i18n>NewAPX}" required="true"/>
								<Input type="Text" value=""/>
								<Label text="{i18n>NewColour}" required="true"/>
								<Input type="Text" value=""/>
								<Label text="{i18n>DateTime}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/DateOfSale}"/>
								<Label text="{i18n>Status}"/>
								<Text text="{DummyJSONModel>/selectedVehicleData/0/Status}"/>
							</f:content>
						</f:SimpleForm>
					</VBox>
					<VBox>
						<f:SimpleForm class="formDetails" editable="false" layout="ResponsiveGridLayout">
							<f:content>
								<core:Title text="{i18n>Guidelines}" />
								<TextArea value="" rows="8" />
							</f:content>
						</f:SimpleForm>
					</VBox>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>Cancel}" type="Default" press="NavigateBack"/>
						<Button text="{i18n>Request}" type="Default"/>
					</OverflowToolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>