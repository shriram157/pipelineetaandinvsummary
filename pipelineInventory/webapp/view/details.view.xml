<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" controllerName="pipelineInventory.controller.details" xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="false">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<!--<Select change="selectedScreen" selectedKey="Details">-->
							<!--	<items>-->
							<!--		<core:Item key="Master" text="Master"/>-->
							<!--		<core:Item key="Details" text="Details"/>-->
							<!--		<core:Item key="Vehicle Details" text="Vehicle Details"/>-->
							<!--		<core:Item key="Order Change" text="Order Change"/>-->
							<!--		<core:Item key="Ship To Dealer" text="Ship To Dealer"/>-->
							<!--		<core:Item key="Ship To Dealer Response" text="Ship To Dealer Response"/>-->
							<!--		<core:Item key="Assign Vehicles" text="Assign Vehicles"/>-->
							<!--		<core:Item key="Assign Vehicles Status" text="Assign Vehicles Status"/>-->
							<!--		<core:Item key="Change History" text="Change History"/>-->
							<!--	</items>-->
							<!--</Select>-->
							<Button text="{i18n>Logout}"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader backgroundDesign="Translucent">
					<Select change="selectedScreen" selectedKey="Details">
						<items>
							<core:Item key="Master" text="Master"/>
							<core:Item key="Details" text="Details"/>
							<core:Item key="Vehicle Details" text="Vehicle Details"/>
							<core:Item key="Order Change" text="Order Change"/>
							<core:Item key="Ship To Dealer" text="Ship To Dealer"/>
							<core:Item key="Ship To Dealer Response" text="Ship To Dealer Response"/>
							<core:Item key="Assign Vehicles" text="Assign Vehicles"/>
							<core:Item key="Assign Vehicles Status" text="Assign Vehicles Status"/>
							<core:Item key="Change History" text="Change History"/>
						</items>
					</Select>
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>VehicleDetails}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ChangeHistory}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<f:SimpleForm width="100%" editable="true" layout="ResponsiveGridLayout">
						<l:HorizontalLayout class="styleHLayout">
							<HBox>
								<Label text="{i18n>VTN}" class="sapUiSmallMargin"/>
								<Input type="Text"/>
							</HBox>
							<HBox>
								<Label text="{i18n>VIN}" class="sapUiSmallMargin"/>
								<Input type="Text"/>
							</HBox>
							<HBox>
								<Label text="{i18n>OrderNumber}" class="sapUiSmallMargin"/>
								<Input type="Text"/>
							</HBox>
							<Label text="" class="sapUiSmallMargin"/>
							<Button text="{i18n>ApplyFilters}" type="Default" press="onApplyFilterBtn"/>
						</l:HorizontalLayout>
					</f:SimpleForm>
					<OverflowToolbar>
						<Label text="{i18n>VehicleDetails}" design="Bold" class="styleFontSize"/>
						<ToolbarSpacer/>
						<Button text="{i18n>DropShipVehicles}" type="Default"/>
						<Button text="{i18n>AssignVehicles}" type="Default"/>
						<Button text="{i18n>ExportToExcel}" type="Default"/>
					</OverflowToolbar>
					<Table items="{DummyJSONModel>/ProductCollection}" class="sapUiResponsiveMargin" mode="MultiSelect" growing="true" growingThreshold="2"
						growingScrollToLoad="false">
						<!--<headerToolbar>-->
						<!--</headerToolbar>-->
						<columns>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>OrderNumber}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>OrderType}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>Status}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>VTN}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>VIN}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Model}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Suffix}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Colour}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>ETAFrom}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>ETATo}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Link text="{DummyJSONModel>ProductId}" press="onNavigateToVL"/>
									<Text text="{DummyJSONModel>Category}"/>
									<Text text="{DummyJSONModel>Status}"/>
									<Link text="{DummyJSONModel>ProductId}"/>
									<Link text="{DummyJSONModel>ProductId}"/>
									<Text text="{DummyJSONModel>Name}"/>
									<Text text="{DummyJSONModel>Name}"/>
									<Text text="{DummyJSONModel>TaxTarifCode}"/>
									<Text text="{DummyJSONModel>DateOfSale}"/>
									<Text text="{DummyJSONModel>DateOfSale}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>