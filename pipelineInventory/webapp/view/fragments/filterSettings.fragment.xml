			<!--	<items>-->
			<!--		<ViewSettingsItem text="{FilterETAToJSON>ETAToText}" key="ETATo-{FilterETAToJSON>ETATo}"/>-->
			<!--	</items>-->
			<!--</ViewSettingsFilterItem>-->
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>