<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" controllerName="pipelineInventory.controller.changeHistory" xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="false">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<Button text="{i18n>Logout}"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader>
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>VehicleDetails}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<!--<Link text="{i18n>ChangeHistory}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>-->
					<ToolbarSpacer>
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
						</layoutData>
					</ToolbarSpacer>
					<Link text="{i18n>Back}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
				</tnt:ToolHeader>
				<content>
					<Label text="{i18n>ConfigurationChangeHistory}" design="Bold" class="styleFontSize sapUiSmallPadding sapUiSmallMargin"/>
					<OverflowToolbar>
						<HBox>
							<Label text="{i18n>Dealer}" design="Bold" class="styleFontSizeSmall sapUiSmallMargin" required="required"/>
							<ComboBox showSecondaryValues="true" filterSecondaryValues="true" value="" selectedKey="" selectionChange="onDealerChange"
								items="{ path: 'BusinessDataModel>/DealerList', sorter: { path: 'BusinessPartner' } }">
								<core:ListItem key="{BusinessDataModel>BusinessPartnerType}"
									text="{BusinessDataModel>BusinessPartner}-{BusinessDataModel>BusinessPartnerName}"/>
							</ComboBox>
						</HBox>
						<ToolbarSpacer/>
						<Button text="{i18n>Submit}" type="Accept" enabled="{LocalModel>/enablesubmitBtn}"/>
					</OverflowToolbar>
					<Table items="{ChangeHistoryModel>/results}" width="auto" class="sapUiResponsiveMargin" growing="true" growingThreshold="5"
						growingScrollToLoad="false">
						<!--<headerToolbar>-->
						<!--	<Toolbar>-->
						<!--		<MessageStrip text="{i18n>Disclaimer}" type="Information" showIcon="true"></MessageStrip>-->
						<!--	</Toolbar>-->
						<!--</headerToolbar>-->
						<columns>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>OrderNumber}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>VTN}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>Series}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>OldModel}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Old Suffix}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Old APX}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Old Colour}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>New Model}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>New Suffix}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>New APX}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>New Colour}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>SubmissionDateTime}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>Status}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>ReSubmit}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Link text="{ChangeHistoryModel>ZZDLR_REF_NO}" press="onNavigateToVL"/>
									<Link text="{ChangeHistoryModel>ZZVTN}" press="onNavigateToVL"/>
									<Text text="{ChangeHistoryModel>TCISeries} {ChangeHistoryModel>SERIES_DESC_EN}"/>
									<Text text="{ChangeHistoryModel>OldModel}"/>
									<Text text="{ChangeHistoryModel>OldSuffix}"/>
									<Text text="{ChangeHistoryModel>OldAPX}"/>
									<Text text="{ChangeHistoryModel>OldColor}"/>
									<Text text="{ChangeHistoryModel>NewModel}"/>
									<Text text="{ChangeHistoryModel>NewSuffix}"/>
									<Text text="{ChangeHistoryModel>NewAPX}"/>
									<Text text="{ChangeHistoryModel>NewColor}"/>
									<Text text="{path:'ChangeHistoryModel>DateSubmitted', formatter: '.formatDate'}"/>
									<Text text="{ChangeHistoryModel>Status}"/>
									<Button text="{i18n>ReSubmit}" press="onNavigateToOC" id="ResubmitBTN" visible="{ChangeHistoryModel>visible}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<OverflowToolbar></OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>